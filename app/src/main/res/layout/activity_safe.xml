<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/sheet"
        layout="@layout/bottom_sheet"/>

    <include layout="@layout/fragment_app_safety" />

    <LinearLayout
        android:elevation="1dp"
        android:id="@+id/share_loc"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/app_white_clickable"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/shareloc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="位置分享" />
    </LinearLayout>


    <Button
        android:id="@+id/fab"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="6dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:text="SOS"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/end" />
    <LinearLayout
        android:elevation="1dp"
        android:id="@+id/be_called"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/app_white_clickable"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/be_called" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="伪装来电" />
    </LinearLayout>

    <com.example.android.learnmiwok.TimingTextView
        android:background="@drawable/white_radius"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/Count_down"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/black"
        android:elevation="2dp"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="140dp"
        android:gravity="center"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="130dp">

        <Button
            android:elevation="1dp"
            android:id="@+id/button1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/radius"

            android:text="寻求守护" />
        <Button
            android:elevation="1dp"
            android:id="@+id/button2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:textStyle="bold"
            android:background="@drawable/end"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="确定到达" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
