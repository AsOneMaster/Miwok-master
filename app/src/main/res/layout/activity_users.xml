<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="0,3"
    android:background="@mipmap/enter_nor"
    tools:context="com.example.android.learnmiwok.acticity.UsersActivity">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="普通用户登录"
        android:textAlignment="center"
        android:textSize="40dp" />
    <TableRow
        android:layout_marginTop="200dp">

        <TextView  />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="账号"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"
            />
        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="邮箱或手机号"
            android:textColorHint="#A9A9A9"/>

        <TextView />
    </TableRow>
    <TableRow>
        <TextView />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入6-16位数字或字母"
            android:inputType="textPassword"
            android:textColorHint="#A9A9A9"/>
        <TextView />
    </TableRow>
    <TableRow>
        <TextView />
        <Button
            android:id="@+id/loginN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_bulue"
            android:text="注册"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/enterN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_bulue"/>
    </TableRow>
    <TableRow>
        <TextView />
        <TextView />
        <TextView
            android:id="@+id/forget_mima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:layout_marginTop="15dp"
            android:textColor="#FF4500"
            android:gravity="right"/>
        <TextView />
    </TableRow>

</TableLayout>
